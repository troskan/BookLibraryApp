@model BookLibraryApp.ViewModels.BookEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h1 class="display-4">Edit Book</h1>
    <div class="container">

        <form asp-action="Edit" asp-controller="Book" method="post" class="mx-auto w-25">
            <div class="form-group">
                <label for="Title">Title</label>
                <input type="text" class="form-control" id="Title" name="Title" placeholder="Enter title" Value="@Model.Book.Title">
            </div>

            <div class="form-group">
                <label for="Author">Author</label>
                <input type="text" class="form-control" id="Author" name="Author" placeholder="Enter author's name" Value="@Model.Book.Author">
            </div>

            <div class="form-group">
                <label for="Description">Description</label>
                <textarea class="form-control" id="Description" name="Description" rows="3" placeholder="Enter description">@Model.Book.Description</textarea>
            </div>

            <div class="form-group">
                <label for="Genre">Genre</label>
                <select class="form-control" id="Genre" name="Genre" Value="<@Model.Book.Genre">
                    @foreach (var genre in Model.Genres)
                    {
                        <option value="@genre">@genre</option>
                    }
                </select>
            </div>

            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="IsAvailableForLoan" name="IsAvailableForLoan" @(Model.Book.IsAvailableForLoan ? "checked" : "")>
                <label class="form-check-label" for="IsAvailableForLoan">Available for loan?</label>
            </div>


            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>

    </div>
</div>
