@model BookLibraryApp.ViewModels.BookEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h1 class="display-4">Edit Book</h1>
    <div class="container">
        <form asp-action="Edit" asp-controller="Book" method="post" class="mx-auto w-25">

            <input type="hidden" asp-for="Book.BookId" />

            <div class="form-group">
                <label asp-for="Book.Title"></label>
                <input asp-for="Book.Title" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Book.Author"></label>
                <input asp-for="Book.Author" class="form-control" />
            </div>
d
            <div class="form-group">
                <label asp-for="Book.Description"></label>
                <textarea asp-for="Book.Description" class="form-control" rows="3"></textarea>
            </div>
            
            <div class="form-group">
                <label asp-for="Book.PublicationYear"></label>
                <input asp-for="Book.PublicationYear" type="number" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Book.Genre"></label>
                <select asp-for="Book.Genre" asp-items="@(new SelectList(Model.Genres))" class="form-control"></select>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Book.IsAvailableForLoan" />
                    @Html.DisplayNameFor(model => model.Book.IsAvailableForLoan)
                </label>
            </div>



            <button type="submit" value="save" class="btn btn-primary mt-3">Submit</button>
        </form>
    </div>
</div>
